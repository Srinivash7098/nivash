<?php
// Define the directory where the files will be uploaded
$target_dir = "uploads/";

// Loop through each uploaded file
foreach ($_FILES["files"]["tmp_name"] as $key => $tmp_name) {
    // Get the file name, type, and size
    $file_name = $_FILES["files"]["name"][$key];
    $file_type = $_FILES["files"]["type"][$key];
    $file_size = $_FILES["files"]["size"][$key];
    
    // Generate a unique file name to avoid overwriting existing files
    $file_path = $target_dir . uniqid() . "_" . $file_name;
    
    // Move the file to the target directory
    move_uploaded_file($tmp_name, $file_path);
    
    // Insert the file information into the database
    $conn = mysqli_connect("localhost", "username", "password", "database");
    $sql = "INSERT INTO files (file_name, file_path, file_type, file_size) VALUES ('$file_name', '$file_path', '$file_type', $file_size)";
    mysqli_query($conn, $sql);
}

echo "Files uploaded successfully.";
?>
