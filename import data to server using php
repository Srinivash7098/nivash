    if(getimagesize($_FILES['img_dir']['tmp_name'])==false)
    {
      echo "select image";
    }
    else
      {
         $image=$_FILES['img_dir']['tmp_name'];
         $nam=$_FILES['img_dir']['name'];

         $image=file_get_contents($image);
         $image=base64_encode($image);
      }


        $filecount=count($_FILES['file']['name']);
        for($i=0;$i<$filecount;$i++){
          $abc=$_FILES['file']['tmp_name'][$i];
          $abc=file_get_contents($abc);
          $abc=base64_encode($abc);
        }
    
   }
     $con=mysqli_connect('127.0.0.1','srinivash','srinivash2023','srinivash');
     if(!$con){
       die('connection error'.mysqli_connect_errorno());
    } else{
       $stmt="INSERT INTO niv (nam,email,num,pass,cf,img_dir,abc)values( '$name','$email','$num','$pass','$cf','$image','$abc')";
       $rs=mysqli_query($con,$stmt);
      }
     if($rs)
